case $(uname) in
  'Darwin')
    path=(
      /usr/local/bin
      /usr/local/sbin
      $GOPATH/bin
      $HOME/.cargo/bin
      $HOME/Library/Python/2.7/bin/
      $HOME/.luarocks/bin
      $HOME/.dotfiles/bin
      $HOME/.rbenv/bin
      /usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/bin
      $path
    )
    ;;
  'Linux')
    path=(
      $HOME/.dotfiles/bin
      $HOME/.cargo/bin
      $HOME/.local/bin
      $HOME/.luarocks/bin
      $HOME/.gem/ruby/2.4.0/bin
      $HOME/Android/Sdk/tools/bin
      $HOME/Android/Sdk/platform-tools
      $HOME/.rbenv
      $HOME/.yarn/bin
      $HOME/.fzf/bin
      $path
    )
    ;;
esac

# Set function paths
case $(uname) in
  'Darwin')
    fpath=(
      /usr/local/share/zsh/site-functions
      $fpath
    )
    ;;
esac
