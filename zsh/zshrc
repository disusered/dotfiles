# Hello
ZSHELL=`which zsh`
if [[ $TMUX = "" ]] then
  if [[ $COLORTERM != "rxvt" && $XTERM_SHELL != $ZSHELL ]] then
    ZFONT="smbraille"
  else
    ZFONT="future"
  fi
  clear && toilet -f $ZFONT `date +"%c"` --filter gay
fi
