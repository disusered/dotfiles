# Temporary files
export TMPDIR="/tmp/$USER"
if [[ ! -d "$TMPDIR" ]]; then
  mkdir -p -m 700 "$TMPDIR"
fi
TMPPREFIX="${TMPDIR%/}/zsh"
if [[ ! -d "$TMPPREFIX" ]]; then
  mkdir -p "$TMPPREFIX"
fi

# fn Keys
bindkey "^[[H" beginning-of-line    # fn ←
bindkey "^[[F" end-of-line          # fn →
bindkey "^[[3~" delete-char         # fn delete

# Marks
export MARKPATH=$HOME/.marks
function jump {
  cd -P "$MARKPATH/$1" 2>/dev/null || echo "No such mark: $1"
}
function mark {
  mkdir -p "$MARKPATH"; ln -s "$(pwd)" "$MARKPATH/$1"
}
function unmark {
  rm -i "$MARKPATH/$1"
}
function marks {
  \ls -l "$MARKPATH" | tail -n +2 | sed 's/  / /g' | cut -d' ' -f9- | awk -F ' -> ' '{printf "%-10s -> %s\n", $1, $2}'
}
function _completemarks {
  reply=($(ls $MARKPATH))
}
compctl -K _completemarks jump
compctl -K _completemarks unmark

# Syntax highlighting
SYNTAX_HIGHLIGHT="$HOME/.dotfiles/vendor/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh"
if [ -f $SYNTAX_HIGHLIGHT ]; then
  source $SYNTAX_HIGHLIGHT
fi

# History substring search
HISTORY_SUB="$HOME/.dotfiles/vendor/zsh-history-substring-search/zsh-history-substring-search.zsh"
if [ -f $HISTORY_SUB ]; then
  source $HISTORY_SUB
  zmodload zsh/terminfo
  # Bind arrows
  bindkey '^[[A' history-substring-search-up
  bindkey '^[[B' history-substring-search-down
fi

# Base16
