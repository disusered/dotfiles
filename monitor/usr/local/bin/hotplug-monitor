#!/bin/bash

set -o pipefail

export DISPLAY=:0.0
export XAUTHORITY=/home/carlos/.Xauthority

TYPE=VGA
ID=1

function connect(){
   logger -t udev "$1 connected"
   xrandr --output "$1" --auto --right-of LVDS-1
}

function disconnect(){
   logger -t udev "$1 disconnected"
   xrandr -s 0
   # xrandr --output "$1" --off
}


if [[ $(xrandr | grep "$TYPE-$ID connected") ]]; then
  connect "$TYPE-$ID"
else
  disconnect "$TYPE-$ID"
fi
