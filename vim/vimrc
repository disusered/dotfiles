  nnoremap    <Leader>s         :SyntasticToggleMode<CR>
  nnoremap    <Leader>t         :TagbarToggle<CR>
  nnoremap    <Leader>u         :GundoToggle<CR>
  nnoremap    <Leader>rt        :%s/\s\+$//e<CR>
  nnoremap    <Leader><Space>   :nohlsearch<CR>
  nnoremap    j                 gj
  nnoremap    k                 gk
  nnoremap    n                 nzz
  nnoremap    N                 Nzz
  nnoremap    *                 *zz
  nnoremap    }                 }zz
  nnoremap    {                 {zz
  nnoremap    #                 #zz
  nnoremap    g*                g*zz
  nnoremap    g#                g#zz

