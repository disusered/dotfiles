snippet for "For loop"
for i in $(seq 1 ${1:10});
do
	${0:echo $i}
done
endsnippet

snippet sh "Shell script"
#!/bin/sh $0
endsnippet

snippet if "A simple if condition"
if [ ${1:-z "\$1"} ]
then
	$0
fi
endsnippet

snippet ife "A simple if else condition"
if [ ${1:-z "\$1"} ]
then
	$4
else
	$0
fi
endsnippet
