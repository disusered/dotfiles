[user]
	name = Carlos Rosquillas
	email = crosquillas@gmail.com
[advice]
	statusHints = true
[color]
	ui = true
	status = always
[color.grep]
	filename = white bold
	linenumber = magenta bold
	match = black blue
[color.branch]
	current = magenta bold
	local = white bold
	remote = green bold
[color.status]
	header = green
[core]
	quotepath = false
	excludesfile = ~/.gitignore_global
	editor = vim
	autocrlf = input
[pretty]
	basic = %C(magenta bold)%h%C(reset) %C(auto)%d%C(reset) %s
	extended = %C(magenta bold)%h%C(reset)  %C(blue bold)%aN%C(reset) %C(auto)%d%C(reset) %s %C(8)(%cr)%C(reset)
	reflog = %C(magenta bold)%h%C(reset)  %C(blue bold)%gd%C(reset) %gs %C(8)(%cr)%C(reset)
[alias]
	l = !git log --graph --color --pretty=extended --abbrev-commit --date=relative --all
	s = !git status --short --branch
	b = !git branch
	bc = !git checkout -b
	c = !git commit --verbose
	ca = !git commit --verbose --amend
	cm = !git commit --message
	g = grep --break --heading --line-number
	a = !git add
	p = !git push
	pf = !git push --force
	d = !git diff --no-ext-diff
	dt = !git difftool
	m = !git merge
	mt = !git mergetool
	f = !git fetch
	fm = !git pull
	co = !git checkout
[credential]
	helper = osxkeychain
[grep]
	lineNumber = true
[push]
	default = upstream
[diff]
	tool = Kaleidoscope
	compactionHeuristic = true
[merge]
	tool = Kaleidoscope
[difftool]
	prompt = false
[mergetool]
	prompt = false
[mergetool "fugitive"]
	cmd = nvim +PatienceDiff -f -c \"Gdiff\" \"$MERGED\"
[difftool "vimdiff"]
	cmd = nvim +PatienceDiff -d -u ~/.nvimrc \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[url "https://github"]
	insteadOf = git://github
[branch]
	autosetuprebase = always
[submodule]
	fetchJobs = 0
