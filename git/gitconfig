[user]
	name = Carlos Rosquillas
	email = crosquillas@gmail.com
[advice]
	statusHints = true
[color]
	ui = true
	status = always
[color.grep]
	filename = white bold
	linenumber = magenta bold
	match = black blue
[color.branch]
	current = magenta bold
	local = white bold
	remote = green bold
[color.status]
	header = green
[core]
	quotepath = false
	excludesfile = /Users/carlos/.gitignore_global
	editor = vim
	autocrlf = input
[alias]
	l = !git log --graph --color --pretty=format:'%C(magenta bold)%h%C(reset) - %s %C(white bold)<%aN>%C(reset) %C(blue bold)(%cr)%C(reset) %C(auto)%d%C(reset)' --abbrev-commit --date=relative --all
	s = !git status --short --branch
	ack = grep --break --heading --line-number
[credential]
	helper = osxkeychain
[grep]
	lineNumber = true
[push]
	default = current
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[mergetool]
	prompt = false
[diff]
	tool = Kaleidoscope
