[user]
	name = Carlos Rosquillas
	email = crosquillas@gmail.com
[advice]
	statusHints = true
[color]
	ui = true
	status = always
[color.grep]
	filename = white bold
	linenumber = magenta bold
	match = black blue
[color.branch]
	current = magenta bold
	local = white bold
	remote = green bold
[color.status]
	header = green
[color "diff"]
	meta = bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[core]
	quotepath = false
	excludesfile = ~/.gitignore_global
	editor = nvim
	autocrlf = input
	pager = diff-so-fancy | less --tabs=4 -RFX
[pretty]
	basic = %C(magenta bold)%h%C(reset) %C(auto)%d%C(reset) %s
	extended = %C(magenta bold)%h%C(reset)  %C(blue bold)%aN%C(reset) %C(auto)%d%C(reset) %s %C(8)(%cr)%C(reset)
	reflog = %C(magenta bold)%h%C(reset)  %C(blue bold)%gd%C(reset) %gs %C(8)(%cr)%C(reset)
[alias]
	l = log --graph --color --pretty=extended --abbrev-commit --date=relative --all
	s = status --short --branch
	b = branch
	bc = checkout -b
	c = commit --verbose
	ca = commit --verbose --amend
	cm = commit --message
	g = grep --break --heading --line-number
	a = add
	p = push
	pf = push --force
	d = diff --no-ext-diff
	dt = difftool
	m = merge
	mt = mergetool
	f = fetch
	fm = pull
	co = checkout
[credential]
	helper = osxkeychain
[grep]
	lineNumber = true
[diff]
	tool = fugitive
	indentHeuristic = true
	submodule = log
[merge]
	tool = fugitive
[difftool]
	prompt = false
[mergetool]
	prompt = false
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[difftool "vimdiff"]
	cmd = nvim -d -u ~/.nvimrc \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[url "https://github"]
	insteadOf = git://github
[branch]
	autosetuprebase = always
[submodule]
	fetchJobs = 0
[rerere]
	enabled = true
[diff-so-fancy]
	markEmptyLines = true
	changeHunkIndicators = true
	stripLeadingSymbols = true
	useUnicodeRuler = true
[cola]
	spellcheck = true
	fontdiff = Source Code Pro,9,-1,5,50,0,0,0,0,0
[status]
	submoduleSummary = true
