# ---------------------------------
# Config
# ---------------------------------
config defaultToCurrentScreen true
config checkDefaultsOnLoad true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Shows app icons and background apps, spreads icons in the same place.
config windowHintsIgnoreHiddenWindows false
config windowHintsShowIcons true
config windowHintsSpread true

# ---------------------------------
# Alias
# ---------------------------------
# Position
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY

alias lefthalf move screenOriginX;screenOriginY screenSizeX*.5;screenSizeY
alias righthalf move screenOriginX+screenSizeX*.5;screenOriginY screenSizeX*.5;screenSizeY

alias leftthird move screenOriginX;screenOriginY screenSizeX*.6;screenSizeY
alias rightthird move screenOriginX+screenSizeX*.4;screenOriginY screenSizeX*.6;screenSizeY

alias leftquarter move screenOriginX;screenOriginY screenSizeX*.75;screenSizeY
alias rightquarter move screenOriginX+screenSizeX*.25;screenOriginY screenSizeX*.75;screenSizeY

# Move to other screen
alias next throw next

# Move to screen
alias alpha throw 0
alias beta throw 1
alias gamma throw 2

# Hyper key
alias hyper ctrl;shift;alt;cmd

# ---------------------------------
# Binds
# ---------------------------------

# Movement
# bind l:${hyper} chain ${rightquarter} | ${rightthird} | ${righthalf}
# bind h:${hyper} chain ${leftquarter} | ${leftthird} | ${lefthalf}

# bind up to screen alpha
# replace chain with sequence for single click composite commands
# bind j:${hyper} chain ${beta} | ${full}

# bind down to screen beta
# bind k:${hyper} chain ${alpha} | ${full}
